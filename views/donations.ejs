<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/view.css" rel="stylesheet"/>
</head>
<body>
   <div class="container">
 <h2>Donations</h2>
  <table border="1" cellpadding="10" cellspacing="0">
  <thead>
    <tr>
      <th>S.No</th>
      <th>Name</th>
      <th>Amount (₹)</th>
    </tr>
  </thead>
  <tbody>
    <% donations.forEach(function(d, index) { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= d.name %></td>
        <td><%= d.amount %></td>
      </tr>
    <% }); %>
  </tbody>
</table>


   <div style="max-width: 400px; margin: 20px auto; padding: 20px; box-shadow: 0 0 15px rgba(0,0,0,0.1); border-radius: 10px; background-color: #fff;">
  <h3 style="text-align:center; color: #0E465A;">Donate for Ganesh Puja</h3>
  <form action="/donations/add" method="POST" style="display: flex; flex-direction: column; gap: 12px;">
    
    <input name="name" placeholder="Your name" required 
           style="padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
    
    <input name="amount" type="number" placeholder="Amount (₹)" required 
           style="padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
    
    <input name="mode" placeholder="Mode of Payment" required 
           style="padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
    
    <input type="number" name="adminPin" placeholder="Admin PIN" required 
           style="padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
    
    <button type="submit" 
            style="background-color: #0E465A; color: white; padding: 10px; border: none; border-radius: 5px; cursor: pointer;">
      Donate
    </button>
  </form>
</div>

    
   </div>
   
</body>
</html>
